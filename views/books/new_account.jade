extends ../layout

block content
  ul(id='error')
    if(errors)
      for error in errors
        li= error
  fieldset
    legend Sign Up
    form(method='post' action='/users/new_account')
      div
        label Username
          input(type='text' name='username')
      div
        label Password 
          input(type='password' name='password')
      div
        label Re-Enter Password
          input(type='password' name='passwordCheck')
      button(type='submit') Sign Up
