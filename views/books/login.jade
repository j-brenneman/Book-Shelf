extends ../layout

block content
  div(class='col-lg-4 centered formAddOn')
    h1.col-lg-offset-2 Login
    br
    if(errors)
      ul(class='col-lg-offset-2 centered')
      for error in errors
        li(class='error col-lg-offset-2')= error
    form(class='form-horizontal', method='post', action='/users/login')
      .form-group
        label(class='col-lg-2 control-label', for='username') Username       
        .col-lg-10
          input(id='username', class='form-control', type='text', name='username')     
      .form-group
        label(class='col-lg-2 control-label', for='password') Password       
        .col-lg-10
          input(id='password', class='form-control', type='password', name='password')       
      .form-group
        div(class='col-lg-10 col-lg-offset-2')
          button(class='btn btn-default', type='reset') Cancel
          |         
          button(class='btn btn-primary', type='submit') Submit
